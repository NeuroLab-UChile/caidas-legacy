# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indentation settings
indent_style = space
indent_size = 2

# Specific file types
[*.{js,jsx,ts,tsx,css,scss}]
indent_size = 2

[*.{py}]
indent_size = 4

[*.{md,markdown}]
trim_trailing_whitespace = false
